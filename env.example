# Copy this file to .env and adjust values as needed
# cp env.example .env

# Application
NODE_ENV=development
PORT=3000
APP_NAME=node-production-app
APP_VERSION=1.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_COMPRESSION=true

# Monitoring
METRICS_ENABLED=true
METRICS_PREFIX=app_
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (simulated)
DB_LATENCY_MS=50
DB_ERROR_RATE=0.01

# Debug Scenarios
ENABLE_DEBUG_SCENARIOS=true
MEMORY_LEAK_SIZE_MB=10
CPU_INTENSIVE_ITERATIONS=1000000

